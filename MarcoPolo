var finalStr = '';
for (let i =  1; i <=100; i++) {
    if(i%4 === 0 && i%7 === 0) {
        finalStr = finalStr.concat('marcopolo').concat(',');
        continue;
    } else if(i%4===0) {
        finalStr = finalStr.concat('marco').concat(',');
        continue;
    } else if(i%7 === 0) {
        finalStr = finalStr.concat('polo').concat(',');
        continue;
    }
    finalStr = finalStr.concat(i).concat(',');   
}
console.log(finalStr = finalStr.replace(/,\s*$/, " "));
